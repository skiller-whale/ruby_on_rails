<h5>Here's what everyone said:</h5>

<% if @band.comments.empty? %>
  <p>Nothing, yet</p>
<% end %>

<% @band.comments.each do |comment| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">
        <%= comment.user.name %> said:
      </h5>
      <p class="card-text">
      <%= comment.content %>
      </p>
    </div>
  </div>
<% end %>

