<p id="notice"><%= notice %></p>

<h1>Band: <%= @band.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @band.description %>
</p>

<p>
  <%= link_to 'Edit', edit_band_path(@band) %> |
  <%= link_to 'Back', bands_path %>
</p>

<h3>Comments</h3>

<% if user_signed_in? %>
  <h5>
    Write a new comment about
    <%= @band.name %>
  </h5>
  <%= form_for [@band, Comment.new] do |f| %>
    <div class="form-group">
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <%= f.submit :Comment %>
  <% end %>
<% else %>
  Only users who are signed in can write comments.
<% end %>

<div class="mt-4">
  <%= render "comments/index", band: @band %>
</div>

<div class="mt-4">
  <h5>Users who have commented on this band</h5>

  <% @users = [] %>

  <% @users.uniq.each do |user| %>
    <%= link_to user.name, user %>
  <% end %>
</div>
