<p id="notice"><%= notice %></p>

<h1>Performances</h1>

<table class="table">
  <thead>
    <tr>
      <th>Start</th>
      <th>Performer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performances.each do |performance| %>
      <tr>
        <td>
          <%= performance.start.strftime('%d %b %Y') %>
          at
          <%= performance.start.strftime('%H:%M') %>
        </td>
        <td>We don't know!</td>
        <td><%= link_to 'Edit', edit_performance_path(performance) %></td>
        <td><%= link_to 'Destroy', performance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

